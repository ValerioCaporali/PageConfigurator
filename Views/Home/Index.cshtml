                    <div class="modal-header">
                        <h4 class="modal-title" id="modify-modal-title">Modifica widget</h4>
                        <button id="close-modal-button" type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">

                        <div class="container">
                            <h5 style="font-weight: 700;">Impostazioni</h5>
                        </div>

                        <div id="settings-tab" class="container">
                            <ul class="nav nav-tabs">
                                <a class="nav-item active nav-link" href="#property-pane"
                                    data-toggle="tab">Proprietà</a>
                                <a class="nav-item nav-link" href="#content-pane" data-toggle="tab">Contenuto</a>
                                <a class="nav-item nav-link" href="#text-pane" data-toggle="tab">Testo</a>
                                <a class="nav-item nav-link" href="#event-pane" data-toggle="tab">Eventi</a>
                                <a class="nav-item nav-link" href="#position-pane" data-toggle="tab">Posizionamento</a>
                                <a class="nav-item nav-link" href="#style-pane" data-toggle="tab">Stile</a>
                                <a class="nav-item nav-link" href="#mobile-style-pane" data-toggle="tab">Stile
                                    Mobile</a>
                            </ul>
                            <div class="tab-content" style="padding: 2%;">
                                <div class="tab-pane active" id="property-pane">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label for="id">Id:</label>
                                            <input id="id" type="number" min="0" class="form-control"
                                                placeholder="Selezionare">
                                        </div>
                                        <div class="col-md-3">
                                            <label for="type">Tipo:</label>
                                            <select id="type" class="form-select" data-style="btn-primary">
                                                <option value="0">Testo</option>
                                                <option value="1">Gallery</option>
                                                <option value="2">video</option>
                                                <option value="3">Pdf</option>
                                                <option value="4">Showcase</option>
                                                <option value="5">Mappa</option>
                                                <option value="6">Pagina Web</option>
                                                <option value="101">Galleria orizzontale</option>
                                                <option value="5">Galleria griglia</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="tab-pane" id="content-pane">

                                    @* TEXT CONTENT *@
                                    <div class="row" id="0" style="display: none;">
                                        <label for="0-text">Testo:</label>
