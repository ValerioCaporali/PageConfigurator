<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <link href="~/css/Sidebar.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/configurator-style.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn3.devexpress.com/jslib/21.2.4/css/dx.common.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn3.devexpress.com/jslib/21.2.4/css/dx.light.css" />

</head>

<style>
    [contenteditable="true"]:active,
    [contenteditable="true"]:focus {
        border-bottom: 1px solid black;
        padding: 2px;
        outline: none;
    }

    [contenteditable="true"]:focus>style::before {
        content: "styles";
        font-size: 1.5em;
        font-weight: 700;
    }

    [contenteditable="true"]:focus>style {
        display: block;
        position: relative;
        right: -50%;
        top: -2em;
        color: blue;
        font-family: courier, monospace;
        font-size: .75em;
        line-height: 1.5;
        padding: .5em;
        background: #fff;
        border: 1px solid #999;
        box-shadow: 1px 1px 2px #777;
        border-radius: 5px;
    }

    .edit-title-icon {
        margin-top: auto;
        margin-bottom: auto;
        margin-left: 15px;
        cursor: pointer;
        display: none;
    }

    .vertical-pdf-scroll-container {
        position: relative;
        margin: 15px;
        padding: 8px;
        width: 100%;
        overflow-y: scroll;
    }

    .horizontal-pdf-scroll {
        position: relative;
        margin: 15px;
        display: flex;
        overflow-x: scroll;
        padding: 8px;
    }

    canvas{
        padding: 6px;
    }

    .vertical-pdf-scroll-container > canvas {
        max-width: 100%;
    }

    .canvas-pdf-scrollable{
      margin: 0 auto;
      display: block;
    }

    .switch {
        position: relative;
        display: inline-block;
        width: 60px;
        height: 34px;
    }

    .switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

    .slider:before {
        position: absolute;
        content: "";
        height: 26px;
        width: 26px;
        left: 4px;
        bottom: 4px;
        background-color: white;
        -webkit-transition: .4s;
        transition: .4s;
    }

    input:checked+.slider {
        background-color: #2196F3;
    }

    input:focus+.slider {
        box-shadow: 0 0 1px #2196F3;
    }

    input:checked+.slider:before {
        -webkit-transform: translateX(26px);
        -ms-transform: translateX(26px);
        transform: translateX(26px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

    .slider.round:before {
        border-radius: 50%;
    }

    .page-options {
        margin-right: 0 !important;
        margin: auto;
        display: flex;
    }

    #prev-page, #next-page, #zoom-in, #zoom-out {
        background-color: transparent;
        border: none;
    }

    #zoom-in, #zoom-out {
        float: right;
    }

    .pdf-toolbar {
        background-color: #4B4B4B;
        border-radius: 20px;
    }

    .map-container {
        margin: auto;
        width: 100% !important;
    }

    #prev-page > .fas, #next-page > .fas, #zoom-in > .fas, #zoom-out > .fas {
        line-height: 2 !important;
        color: white;
    }

    .grid-gallery {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        align-items: center;
    }

    .grid-gallery > .image-item:hover .actions-panel {
        opacity: 1;
    }

    .grid-gallery > .image-item {
        width: calc(25% - 16px);
        margin: 8px;
        position: relative;
    }

    .image-item > img {
        width: 100%;
        max-height: 450px;
        object-fit: contain;
        display: block;
    }

    .grid-gallery > .selectable {
        cursor: pointer;
    }

    .pdf-page-info {
        margin-left: 1rem;
        color: white;
    }

     .gallery {
    	 display: flex;
    	 flex-direction: row;
    	 height: 100%;
    	 overflow: hidden;
    }
     .gallery .gallery-container {
    	 display: flex;
    	 flex-direction: row;
    	 height: 100%;
    	 flex: 1 1 auto;
    	 padding: 24px 0;
    	 overflow-x: scroll;
    	 -ms-overflow-style: none;
    	/* IE and Edge */
    	 scrollbar-width: none;
    	/* Firefox */
    }
     .gallery .gallery-container .item-gallery-image {
    	 height: 100%;
    	 width: auto;
    	 margin: 0 3px;
    	 position: relative;
    	 display: block;
    	 cursor: pointer;
    }
     .gallery .gallery-container .item-gallery-image img {
    	 height: 100%;
    	 object-fit: contain;
    	 display: block;
    }
     .gallery .gallery-container .item-gallery-image:first-of-type {
    	 margin-left: 0;
    }
     .gallery .gallery-container .item-gallery-image:last-of-type {
    	 margin-right: 0;
    }
     .gallery .gallery-container .item-gallery-image:hover {
    	 transform: scale(1.1);
    	 z-index: 100;
    }
     .gallery .gallery-container .item-gallery-image:hover .actions-panel {
    	 opacity: 1;
    }
     .gallery .gallery-container .disable-scale:hover {
    	 transform: scale(1) !important;
    	 z-index: 0;
    }
     .gallery .gallery-container .disable-scale:hover .actions-panel {
    	 display: none;
    }
     .gallery .gallery-container::-webkit-scrollbar {
    	 display: none;
    }
     .gallery .navigation-arrow {
    	 height: 100%;
    	 display: flex;
    	 align-items: center;
    	 flex: 0 0 56px;
    }
     .gallery .navigation-arrow svg-icon {
    	 width: 40px;
    	 height: 40px;
    	 border-radius: 20px;
    	 margin: 8px;
    	 fill: white;
    	 padding: 4px;
    	 cursor: pointer;
    	 background-color: rgba(0, 0, 0, 0.7);
    }
     .gallery .navigation-arrow svg-icon:hover {
    	 background-color: rgba(0, 0, 0, 0.9);
    }
     .gallery .left-arrow {
    	 transform: rotateZ(180deg);
    }

    .page {
    max-width: 80%;
    margin-left: 0;
    margin-right: 0;
    margin: auto;
    }

    #page {
        text-align: center;
    }
</style>

<body>
    <div class="page-wrapper chiller-theme toggled">
        <a id="show-sidebar" class="btn btn-sm btn-dark" href="#">
            <i class="fas fa-bars"></i>
        </a>
        <nav id="sidebar" class="sidebar-wrapper">
            <div class="sidebar-content">
                <div class="sidebar-brand">
                    <a href="#">pro sidebar</a>
                    <div id="close-sidebar" onclick="reloadGalleries()">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
                <div class="sidebar-header">
                    <div class="user-pic">
                        <img class="img-responsive img-rounded"
                            src="https://raw.githubusercontent.com/azouaoui-med/pro-sidebar-template/gh-pages/src/img/user.jpg"
                            alt="User picture">
                    </div>
                    <div class="user-info">
                        <span class="user-name">
                            Jhon
                            <strong>Smith</strong>
                        </span>
                        <span class="user-role">Administrator</span>
                        <span class="user-status">
                            <i class="fa fa-circle"></i>
                            <span>Online</span>
                        </span>
                    </div>
                </div>
                <div class="sidebar-menu">
                    <ul>
                        <li class="header-menu">
                            <span>General</span>
                        </li>
                        @if (@ViewBag.HomePagesNumber > 0)
                        {
                            <li class="sidebar-dropdown">
                                <a href="#">
                                    <i class="far fa-file"></i>
                                    <span>Home Pages</span>
                                    <span id="home-pages-number" class="badge badge-pill badge-success"></span>
                                </a>
                                <div class="sidebar-submenu">
                                    <ul id="home-pages-list">

                                    </ul>
                                </div>
                            </li>
                        }
                        @if (@ViewBag.PagesNumber == 0)
                        {

                        }

                        <li class="sidebar-dropdown">
                            <a href="#">
                                <i class="far fa-file"></i>
                                <span>Pagine</span>
                                <span id="pages-number" class="badge badge-pill badge-success"></span>
                            </a>
                            <div class="sidebar-submenu">
                                <ul id="pages-list">

                                </ul>
                            </div>
                        </li>

                    </ul>

                </div>
        </nav>
        <!-- sidebar-wrapper  -->

        <main class="page-content" id="main">
            <div class="row">
                <h4 id="page-title" contenteditable="true" style="display:block;"></h4>
                <span id="editButton" class="edit-title-icon">
                    <i class="fas fa-pencil-alt" style="font-size: 15px;"></i>
                </span>
                <div class="page-options">
                    <div id="page-language" style="display: none;">
                        <label for="">Lingua: </label>
                        <select name="language" id="language">

                        </select>
                    </div>
                    <div id="page-default" style="display: none;">
                        <label for="">Default: </label>
                        <select name="default" id="default"></select>
                    </div>
                </div>
            </div>
            <div class="demo-container" id="demo-container" style="display: none;">
                <div id="page" class="page">
                    <div id="responsive-box">
                    </div>
                </div>
            </div>
        </main>
    </div>

</body>

</html>

